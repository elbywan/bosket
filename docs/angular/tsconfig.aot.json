{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": false,
        "allowJs": true,
        "lib": [ "es2015", "dom" ]
    },
    "include": [
        "./**/*.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "./aot",
        "skipMetadataEmit" : true
    }
}
